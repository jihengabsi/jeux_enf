<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list1"
    android:orientation="vertical"
    tools:context=".animal_level">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="302dp">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginRight="150sp"
            android:background="@drawable/house"
            android:onClick="home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Levels"
            android:textColor="#fff"
            android:textSize="80dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:background="#10000000"
                android:onClick="animal_1"
                android:text="1"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:textStyle="bold"


                />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:background="#10000000"
                android:onClick="animal_2"
                android:text="2"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#10000000"
                android:onClick="animal_3"
                android:text="3"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:background="#10000000"
                android:onClick="animal_4"
                android:text="4"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:background="#10000000"
                android:onClick="animal_5"
                android:text="5"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#10000000"
                android:onClick="animal_6"
                android:text="6"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:background="#10000000"
                android:onClick="animal_7"
                android:text="7"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:background="#10000000"
                android:onClick="animal_8"
                android:text="8"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#10000000"
                android:onClick="animal_9"
                android:text="9"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
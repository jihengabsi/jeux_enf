<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list1"
    android:orientation="vertical"
    tools:context=".animals2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="150sp"
            android:background="@mipmap/menu" />

        <Button
            android:id="@+id/cheat"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/parachute"
            android:onClick="cheat" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="228dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/panda"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/animals"
        android:textColor="#fff"
        android:textSize="@dimen/gros"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="323dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/radioShapes1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


            <RadioButton

                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:text="Pingouin"
                android:textAlignment="textEnd"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:text="Panda"
                android:textAlignment="textEnd"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold" />


            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:text="Dog"
                android:textAlignment="textEnd"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="#A56F88"
        android:text="Choose"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:orientation="vertical"
    tools:context=".number1">

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="150sp"
        android:background="@mipmap/menu" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="228dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/nine"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Number Nine"
        android:textColor="#fff"
        android:textSize="@dimen/gros"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="323dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_listen"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="60sp"
            android:background="@mipmap/play"
            android:onClick="play" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="15sp"
            android:background="@mipmap/pause"
            android:onClick="pause" />


        <Button
            android:id="@+id/btn_stop"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="15sp"
            android:background="@mipmap/stop"
            android:onClick="stop" />

    </LinearLayout>


    <Button
        android:id="@+id/button2"
        android:layout_width="100sp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:background="#54b48c"
        android:onClick="next"
        android:text="Preced"
        android:textColor="#fff"
        android:textStyle="bold" />


</LinearLayout>